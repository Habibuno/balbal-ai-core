# Security settings
audit=true
fund=false
package-lock=true
save-exact=true
engine-strict=true

# Registry settings
registry=https://registry.npmjs.org/
always-auth=false

# Package security
strict-ssl=true
ignore-scripts=true
ignore-engines=false

# Dependency settings
save-prefix=''
legacy-peer-deps=false
auto-install-peers=true

# Security policies
audit-level=high
maxsockets=50
fetch-retries=3
fetch-retry-factor=2
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000 